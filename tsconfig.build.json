{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "esnext",
      "dom",
      "es2019"
    ],
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "exclude": ["node_modules", "dist"]
}
